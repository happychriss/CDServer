<% title "Adjust page order with drag and drop" %>

<%= form_for(@document, :html => {:class => "input_area"}) do |f| %>

    <p>
      Comment:  <%= f.text_field :comment %>
      <span style="margin-left:10px"> Change Folder for all pages:    <%= select_tag(:folder_id,  options_from_collection_for_select(Folder.all,'id','name'), {:include_blank => true}) %> </span>
      <span style="margin-left:10px">
        Document will expire: <%= if @document.delete_at.nil? then "never" else "#{@document.delete_at.strftime('%B %Y')} (in #{(@document.delete_at.year * 12 + @document.delete_at.month) - (Date.today.year * 12 + Date.today.month)} months)" end%>
        | Change expiration, expires at:

       <%= f.select(:delete_at, options_for_select([[(Date.today+1.year).year, Date.today+1.year], [(Date.today+2.year).year, Date.today+2.year], [(Date.today+5.year).year, Date.today+5.year],['never', Date.new(3000)]]), {:include_blank => ''},:id => 'lb_no_delete') %>

      </span>
            <span style="margin-left:10px">
      Never delete this file: <%= f.check_box(:no_delete,:id=>'cb_no_delete') %>
</span>
    </p>


    <%= render :partial => '/keywords', :locals => {:current_keywords => @document.keyword_ids} %>


    <div style="clear:both;"></div>
    </br>


    <%= (link_to "<<< Back", session[:search_results]+"#page_#{@document.pages.first.id}") %>

    <%= f.submit "Update" %>
<% end %>

<div style="padding-top: 10px">
  <%= render :partial => 'pages_edit', :locals => {:document => @document} %>
</div>




