
  <div style="margin-left: 10px; margin-right: 10px;">

  <%= form_for(@document) do |f| %>


        <div class="document_sort" id="sortable2">
          <%= render :partial => 'pages_sorted', :locals => {:pages_sorted => @pages_sorted} %>
        </div>


        <div class="input_area">
          <p>
            <%= f.label "Comment:", :class => 'standard_label' %>  <%= f.text_field :comment %>
            <span style="margin-left:10px"> Folder:    <%= f.select("folder_id", Folder.all.collect { |p| [p.name, p.id] }, {:include_blank => false}) %> </span>
          </p>

          <%= render :partial => 'keywords', :locals => {:current_keywords => @document.keyword_ids} %>

          <%= f.submit "Sent to Upload",  :id => "upload_btn", :name=> "sfasfd" %>
        </div>
    <% end %>
  </div>
