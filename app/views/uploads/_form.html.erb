<%= form_for(@upload, :html => {:multipart => true}) do |f| %>

    <% if @upload.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@upload.errors.count, "error") %> prohibited this upload from being saved:</h2>

          <ul>
            <% @upload.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :upload_file %>
      <br/>
      <%= f.file_field :upload_file %>
    </div>

    <div class="field">
      <%= f.label :source %>
      <br/>
      <%= f.text_area :source %>
    </div>
    <div class="field">
      <%= f.label :folder_id %>
      <br/>
      <%= f.number_field :folder_id %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
