<a name='doc<%= page.id %>'></a>
<%= image_tag(page.short_path(:s_jpg), :id => page.id, :bigjpg => page.short_path(:jpg)) %>
<div class="clear"></div>

<div class="preview_footer">
  <%= "#{page.id} - #{page.created_at.strftime("%d.%m.%y")} - #{page.source}" %>
  <div class="clear"></div>
  <%= (link_to "Delete", page, :remote => true, :confirm => 'Are you sure?', :method => :delete) %>
</div>